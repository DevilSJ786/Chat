<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/send_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/send_drowable"
        android:text="@string/welcome"
        android:maxWidth="250dp"
        android:paddingStart="10dp"
        android:paddingBottom="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="25dp"
        android:textSize="18sp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/send_massage_emoji"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/send_message_tv"
        app:layout_constraintEnd_toStartOf="@+id/send_message_tv"
        app:layout_constraintStart_toStartOf="@+id/send_message_tv"
        app:layout_constraintTop_toTopOf="@+id/send_message_tv" />

    <TextView
        android:id="@+id/sendtime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_9_12_am"
        android:textSize="11sp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/send_message_tv"
        app:layout_constraintEnd_toEndOf="@+id/send_message_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>