<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/receive_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/receive_drowable"
        android:maxWidth="250dp"
        android:minWidth="70dp"
        android:layout_margin="10dp"
        android:paddingStart="10dp"
        android:paddingBottom="30dp"
        android:paddingTop="5dp"
        android:paddingEnd="35dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/receive_massage_emoji"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/receive_message_tv"
        app:layout_constraintEnd_toEndOf="@+id/receive_message_tv"
        app:layout_constraintStart_toEndOf="@+id/receive_message_tv"
        app:layout_constraintTop_toTopOf="@+id/receive_message_tv" />

    <TextView
        android:id="@+id/recivetime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/receive_message_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>